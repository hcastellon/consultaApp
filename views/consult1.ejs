<!DOCTYPE html>
<html lang="en">
<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1", shrink-to-fit=no">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <title>Fetch using MySQL and Node.js</title>
</head>
<body>
  <div class="container">
    <h1 class="text-center mt-3 mb-3"><%= title %></h1>
    
    
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col">Sample Data</div>
                <div class="col"></div>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered">
      <tr>
        <th>Nombre Completo</th>
        <th>Nombres</th>
        <th>Apellidos</th>
        <th>Última Conexión</th>
        <th>Días sin Conexión</th>
        <th>Foto de Perfil</th>
        <th>Presentación Docente</th>
        <th>Fecha de Informe</th>
        <th>Correo</th>
      </tr>
      <% if (userData.length !== 0) { %>
        <% userData.forEach(function(data, index) { %>
          <tr>
            <td><%= data.Nombre_Completo %></td>
            <td><%= data.Nombres %></td>
            <td><%= data.Apellidos %></td>
            <td><%= data.Ultima_Conexion %></td>
            <td><%= data.Dias_no_conexion %></td>
            <td><%= data.Foto_perfil %></td>
            <td><%= data.Presentacion_Docente %></td>
            <td><%= data.Fecha_Informe %></td>
            <td><%= data.Correo %></td>
          </tr>
        <% }); %>
      <% } else { %>
        <tr>
          <td colspan="7">No Data Found</td>
        </tr>
      <% } %>
    </table>
  </div>
</div>
</div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous"></script>
</body>
</html>